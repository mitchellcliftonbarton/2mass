<div class="create-person">
  <div class="form">
    <div class="options">
      <select onChange={{action (route-action 'loadImage')}} id="person-list">
        <option value="create-new" selected>Create New Person</option>
        {{#each model as |person|}}
          <option value="page-title" data-id={{person.id}}>{{person.name}}</option>
        {{/each}}
      </select>
    </div>
    <form {{action 'createPerson' on='submit'}} id="create-person-form">
      <div class="half selection">
        <p>Select Show</p>
        {{#select-box/native id="showSelect" as |sb|}}
          {{#each allShows as |show|}}
            {{sb.option value=show.id label=show.title}}
          {{/each}}
        {{/select-box/native}}
      </div>
      <div class="half">
        {{input value=name placeholder="Enter Name" class="form-control"}}
      </div>

      <div {{action 'deleteRecord'}} class="btn btn-default delete">Delete Record</div>
      <button type="submit" class="btn btn-default">Create Person Record</button>
    </form>
  </div>
</div>

{{outlet}}
